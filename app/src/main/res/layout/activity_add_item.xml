<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddItemActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    app:srcCompat="@drawable/arrow" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="347dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="176dp"
                    android:text="Add Item"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="665dp">

                <EditText
                    android:id="@+id/foodName"
                    android:layout_width="372dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:ems="10"
                    android:hint="Enter Food Name"
                    android:inputType="text"
                    android:paddingStart="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/foodCatSpinner" />

                <Spinner
                    android:id="@+id/foodCatSpinner"
                    android:layout_width="331dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:autofillHints="Select Category"
                    android:background="@drawable/custom_spinner_bg"
                    android:elevation="5dp"
                    android:paddingStart="24dp"

                    android:paddingEnd="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/foodName"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/foodPrice"
                    android:layout_width="371dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="74dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="74dp"
                    android:paddingStart="24dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:hint="Enter Food Price"
                    android:inputType="text"
                    app:layout_constraintEnd_toEndOf="@+id/foodName"
                    app:layout_constraintStart_toStartOf="@+id/foodName"
                    app:layout_constraintTop_toBottomOf="@+id/foodName" />

                <TextView
                    android:id="@+id/selectImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="24dp"
                    android:text="Add Image"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/foodPrice"
                    app:layout_constraintTop_toBottomOf="@+id/foodPrice" />

                <ImageView
                    android:id="@+id/pickImg"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/selectImg"
                    app:layout_constraintTop_toBottomOf="@+id/foodPrice"
                    app:srcCompat="@drawable/addsign" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView7"
                    android:layout_width="175dp"
                    android:layout_height="102dp"
                    android:layout_marginTop="52dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintEnd_toEndOf="@+id/pickImg"
                    app:layout_constraintStart_toStartOf="@+id/selectImg"
                    app:layout_constraintTop_toBottomOf="@+id/foodPrice">

                    <ImageView
                        android:id="@+id/selectedImg"
                        android:layout_width="162dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/add_img" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:text="Description"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView7" />

                <EditText
                    android:id="@+id/descriptionTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:paddingLeft="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="44dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:hint="Enter Short Description"
                    android:paddingStart="24dp"
                     app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView12" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/additemBtn"
                    android:layout_width="157dp"
                    android:layout_height="57dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_bg"
                    android:text="Add Item"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.992" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
